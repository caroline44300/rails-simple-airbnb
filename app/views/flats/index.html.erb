<h1>Flats (<%= @flats.count %>)</h1>

<% @flats.each do |flat| %>
  <div class="card">
    <div class="card-top">
      <h3><%=  flat.name %></h3>
      <p><%=  flat.address %></p>
      <div class="row">
        <p><%=  flat.number_of_guests %></p>
        <p><%=  flat.price_per_night %></p>
      </div>
    </div>
    <div class="card-bottom">
      <%= link_to "More info", flat_path(flat) %>
    </div>
  </div>
<% end %>
